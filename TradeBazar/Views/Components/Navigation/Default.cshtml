@using Umbraco.Cms.Web.Common.PublishedModels
@model System.Collections.Generic.IEnumerable<Umbraco.Cms.Web.Common.PublishedModels.NavigationItem>

<nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
    <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="@Model.First().Link.Url">Start Bootstrap</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ms-auto py-4 py-lg-0">
                
                @if (Model != null && Model.Any())
                {
                    @foreach (var navigationItem in Model)
                    {
                        if (navigationItem.ChildLinks != null && navigationItem.ChildLinks.Any())
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link px-lg-3 py-3 py-lg-4 dropdown-toggle" id="@navigationItem.Key" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">@navigationItem.Link.Name</a>
                                <ul class="dropdown-menu border-0" aria-labelledby="@navigationItem.Key">
                                    @foreach (var childLink in navigationItem.ChildLinks)
                                    {
                                        <li>
                                            <a class="dropdown-item" href="@childLink.Url">@childLink.Name</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link px-lg-3 py-3 py-lg-4" href="@navigationItem.Link.Url">@navigationItem.Link.Name</a>
                            </li>
                        }
                    }
                }
                
            </ul>
        </div>
    </div>
</nav>