@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@{
	var row = (QuoteRow)Model.Content;
	var settings = (QuoteRowSettings)Model.Settings;
	if(settings?.Hide ?? false) { return; }
}

<div class="row gx-4 gx-lg-5 my-5 justify-content-center bg-light text-end">	
	<figure class="@(settings?.TextAlignment ?? "text-start")">
		<blockquote cite="@row.CiteLink?.Url">
			@row.QuoteText
		</blockquote>
		@if(!string.IsNullOrWhiteSpace(row.QuoteAuthor))
		{
			<figcaption>
				@if(!string.IsNullOrWhiteSpace(row.AuthorJobTitle))
				{
					@:â€”@(row.QuoteAuthor), <cite>@row.AuthorJobTitle</cite>				
				}
			</figcaption>
		}
	</figure>
</div>